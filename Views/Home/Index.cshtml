@{
    ViewData["Title"] = "Welcome to Our Barber Shop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="~/css/home.css" rel="stylesheet" />
</head>

<div class="background-image">
    <div class="container mt-5">
        <div class="text-center mb-5">
            <h1 class="display-4 text-white">Welcome to Our Barber Shop</h1>
            <p class="lead text-white">Experience the art of grooming with our expert barbers.</p>
            <a href="@Url.Action("Index", "Service")" class="btn btn-outline-light">Explore Services</a>
        </div>

        <div class="row align-items-center">
            <div class="col-md-6">
                <img src="https://e1.pxfuel.com/desktop-wallpaper/37/1010/desktop-wallpaper-50-barber-thumbnail.jpg" alt="Barber Shop" class="img-fluid rounded shadow">
            </div>
            <div class="col-md-6">
                <h2 class="text-white">Why Choose Us?</h2>
                <p class="text-white">Our team is dedicated to providing you with a personalized grooming experience.</p>
                <ul class="list-unstyled text-white">
                    <li><i class="bi bi-check-circle"></i> Skilled professionals</li>
                    <li><i class="bi bi-check-circle"></i> Relaxing atmosphere</li>
                    <li><i class="bi bi-check-circle"></i> Quality products</li>
                </ul>
            </div>
        </div>

    <div class="text-center mt-5">
        <h3 class="text-secondary">Gallery</h3>
        <p>Take a look at our recent work.</p>
        <div class="row">
            <div class="col-md-4 mb-4">
                <img src="https://i.pinimg.com/736x/39/82/1d/39821dfd3fece681b537dcee8fae986f.jpg" alt="Gallery Image 1" class="img-fluid rounded shadow">
            </div>
            <div class="col-md-4 mb-4">
                <img src="https://cdn.prod.website-files.com/5cb569e54ca2fddd5451cbb2/63f6ba44f7a7562e47c195bc_Hero-O1.jpg" alt="Gallery Image 2" class="img-fluid rounded shadow">
            </div>
            <div class="col-md-4 mb-4">
                <img src="https://media.istockphoto.com/id/943012704/photo/small-boy-during-haircut-at-hair-salon.jpg?s=170667a&w=0&k=20&c=gphaRtW6YsKXcFaiEqak5fy8Ea800w5NX9Vqk0jDjVc=" alt="Gallery Image 3" class="img-fluid rounded shadow">
            </div>
        </div>
    </div>

    <div class="text-center my-5">
            <a href="@Url.Action("Create", "Appointment")" class="btn btn-light btn-lg">Book Your Appointment</a>
        </div>
    </div>
</div>