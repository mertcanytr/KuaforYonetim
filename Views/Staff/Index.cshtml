@model IEnumerable<KuaforYonetim1.Models.Staff>

<h2>Çalışan Listesi</h2>

<table class="table">
    <thead>
        <tr>
            <th>Ad Soyad</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var staff in Model)
        {
                <tr>
                    <td>@staff.NameSurname</td>
                    <td>
                        <a href="@Url.Action("Edit", "Staff", new { id = staff.StaffId })" class="btn btn-warning">Düzenle</a>
                        <form asp-action="Delete" asp-controller="Staff" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@staff.StaffId" />
                            <button type="submit" class="btn btn-danger">Sil</button>
                        </form>
                    </td>
                </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Staff")" class="btn btn-primary">Yeni Çalışan Ekle</a>