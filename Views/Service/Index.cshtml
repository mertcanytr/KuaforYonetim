@model IEnumerable<KuaforYonetim1.Models.Service>

@{
    ViewData["Title"] = "Welcome to Our Barber Shop";
}

<head>
    <link href="~/css/services.css" rel="stylesheet" />
</head>

<div class="index-background">
    <div class="content">
        <div class="text-center">
            <h2>Our Services</h2>
            <p>Choose from a variety of grooming services to look your best.</p>
        </div>

        <div class="row justify-content-center gap-5">
            @foreach (var service in Model)
            {
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <div class="card service cardList mb-4 shadow-sm">
                            <a asp-action="BookService" asp-controller="Book" asp-route-serviceName="@service.ServiceName.ToLower()">
                                
                            </a>
                            <div class="card-body">
                                <h5 class="card-title">@service.ServiceName</h5>
                                <p class="card-text">Duration: @service.Duration minutes</p>
                                <p class="card-text">Price: @service.Price.ToString("C")</p>
                                <p class="card-text">A brief description of the @service.ServiceName service.</p>
                            </div>
                        </div>
                    </div>
            }
        </div>

       
        </div>
            <div class="text-center my-5">
                <a href="@Url.Action("Create", "Appointment")" class="btn btn-light btn-lg">Book Your Appointment</a>
            </div>
        </div>


        <div id="our-services" class="text-white">
            <div class="container">
                <div class="row text-center">
                    <div class="col-md-12">
                        <h2 class="home" data-aos="fade-up">Price List</h2>
                    </div>
                </div>
                <div class="row mt-4 justify-content-center">
                    <div class="col-md-6 col-sm-6" data-aos="fade-left">
                        <div class="price-list">
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>